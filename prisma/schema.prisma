generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

model User {
	id Int @id @default(autoincrement())
	username String @unique
	password String

	objects Object[]
}

model Object {
	id Int @id @default(autoincrement())
	owner User @relation(fields: [ownerId], references: [id])
	ownerId Int

	contents Object[] @relation("contents")
	location Object @relation("contents", fields: [locationId], references: [id])
	locationId Int

	props Prop[]
}

model Prop {
	id Int @id @default(autoincrement())
	object Object @relation(fields: [objectId], references: [id], onDelete: Cascade)
	objectId Int
	location String
	@@unique([objectId, location])
	value String
}